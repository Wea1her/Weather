---
/**
 * 功能说明：
 * 项目卡片组件，用于在主页展示项目信息。
 * 支持自定义标题、副标题、图片、链接等，鼠标悬停时有过渡动画效果。
 */
import type { ImageMetadata } from 'astro'
import { Image } from 'astro:assets'
import type { HTMLTag, Polymorphic } from 'astro/types'

import { cn } from 'astro-pure/utils'

// 组件属性类型定义
type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }> & {
  heading: string        // 标题
  subheading: string     // 副标题
  imagePath: string      // 图片路径
  altText?: string       // 图片替代文本（可选）
  href?: string          // 链接地址（可选）
  class?: string         // 自定义 CSS 类名（可选）
}

// 解构组件属性
const {
  as: Tag = 'a',         // HTML 标签类型，默认为 a 标签
  class: className,       // 自定义类名
  href,                   // 链接地址
  heading,                // 标题
  subheading,             // 副标题
  imagePath,              // 图片路径
  altText                 // 图片替代文本
} = Astro.props

// 导入项目图片资源
const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/projects/*.{jpeg,jpg,png,gif,avif,webp}'
)
// 检查图片路径是否存在
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/projects/*.{jpeg,jpg,png,gif,avif,webp}"`
  )
---

<!-- 项目卡片容器 -->
<Tag
  class={cn(
    className,
    'project-card group overflow-hidden relative flex flex-col justify-end rounded-2xl border bg-muted ',
    href && 'transition-all hover:border-foreground/25 hover:shadow-sm'
  )}
  href={href}
  target='_blank'
>
  <!-- 项目背景图片 -->
  <Image
    src={images[imagePath]()}
    alt={altText ?? heading}
    class='absolute w-full h-full object-cover opacity-60 transition-opacity group-hover:opacity-100 dark:opacity-35'
    loading='lazy'
  />
  <!-- 项目信息前景层 -->
  <div class='project-card-fg z-10 flex flex-col gap-y-0.5 px-5 pb-4 pt-36 transition-all'>
    <h2 class='text-lg font-medium'>{heading}</h2>
    <p class='text-muted-foreground'>{subheading}</p>
  </div>
  <slot />
</Tag>

<style>
  /* 项目卡片前景渐变效果 */
  .project-card-fg {
    --un-gradient-shape: to bottom in oklch;
    --un-gradient: var(--un-gradient-shape), var(--un-gradient-stops);
    --un-gradient-from-position: 0%;
    --un-gradient-from: transparent var(--un-gradient-from-position);
    --un-gradient-to-position: 80%;
    --un-gradient-to: hsl(var(--card) / var(--un-to-opacity, 1)) var(--un-gradient-to-position);
    --un-gradient-stops: var(--un-gradient-from), var(--un-gradient-to);
    background-image: linear-gradient(var(--un-gradient));
  }

  /* 鼠标悬停时渐变效果变化 */
  .project-card:hover .project-card-fg {
    --un-gradient-to-position: 100%;
  }
</style>
